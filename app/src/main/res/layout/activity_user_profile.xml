<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView para la imagen de perfil -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/default_profile_image"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Imagen de perfil" />

    <!-- Bot贸n para cambiar la imagen de perfil -->
    <Button
        android:id="@+id/buttonChangeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar imagen de perfil"
        android:layout_gravity="center"/>

    <!-- EditText para el nombre -->
    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de usuario"
        android:enabled="false" />

    <!-- EditText para el correo electr贸nico -->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electr贸nico"
        android:enabled="false" />

    <!-- Bot贸n para editar -->
    <Button
        android:id="@+id/buttonEdit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:visibility="gone" />

</LinearLayout>

